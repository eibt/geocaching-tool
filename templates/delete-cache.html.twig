{% extends "layout.html.twig" %}

{% block title %}
    Delete treasure | Geocaching Tool
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #content {
            margin-left: 210px;
            padding: 25px;
        }
    </style>
{% endblock %}

{% block content %}
    {# Include left menu #}
    {% include 'menu.html.twig' with {'active_item': ''} %}

    {# Content #}
    <div id="content">
        <div class="ui basic segment">
            <h1 class="ui dividing header">
                Delete treasure
                <div class="sub header">Are you sure you want to delete this treasure?</div>
            </h1>
            <div class="ui items">
                <div class="item">
                    <div class="ui small image">
                        <img src="{{  asset('files/images/') }}{{ cache.hash }}">
                    </div>
                    <div class="content">
                        <a class="header">{{ cache.title }}</a>
                        <div class="description">
                            <p><strong>Author:</strong> {% if cache.author %}{{ cache.author }}{% else %}--{% endif %}</p>
                            <p><strong>Title:</strong> {{ cache.title }}</p>
                            <p><strong>Message:</strong> {{ cache.message }}</p>
                            <p><strong>Clue:</strong> {% if cache.clue %}{{ cache.clue }}{% else %}--{% endif %}</p>
                            <p><strong>Published:</strong> {{ cache.creation_time_ago }}</p>
                            <p><strong>Views:</strong> {{ cache.views_count }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui divider"></div>
            {{ form_start(form) }}
                <div class="field">
                    {{ form_widget(form.hash) }}
                </div>
                <a href="{{ path('homepage') }}" class="ui black button">Cancel</a>
                <button class="ui red button" type="submit">Delete</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}